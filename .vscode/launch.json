{
  "version": "0.2.0",
  "configurations": [

    // ==========================================
    // GO BACKEND DEBUGGING
    // ==========================================
    {
      "name": "Debug Backend (Go)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/workspace/apps/api/cmd/api",
      "cwd": "${workspaceFolder}/workspace/apps/api",
      "env": {
        "APP_ENV": "development"
      },
      "showLog": true,
      "trace": "verbose"
    },
    {
      "name": "Debug Backend Test",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/workspace/apps/api",
      "cwd": "${workspaceFolder}/workspace/apps/api",
      "args": ["-test.v"]
    },

    // ==========================================
    // ATTACH TO RUNNING PROCESSES
    // ==========================================
    {
      "name": "Attach to Backend",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": "${command:pickProcess}"
    }
  ]
}
